{
  "name": "TabMate",
  "version": "0.3",
  "description": "Creates keyboard shortcuts to manipulate tabs",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "commands": {
    "toggle-pin": {
      "suggested_key": { "default": "Alt+Shift+P" },
      "description": "Toggle tab pin"
    },
    "move-tab-left": {
      "suggested_key": {
        "default": "Alt+Shift+Comma",
        "mac": "MacCtrl+Comma"
      },
      "description": "Move tab left"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Alt+Shift+Period",
        "mac": "MacCtrl+Period"
      },
      "description": "Move tab right"
    }
  },
  "manifest_version": 2
}
